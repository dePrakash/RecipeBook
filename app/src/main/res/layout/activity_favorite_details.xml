<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBE8E8"
    tools:context=".ui.fav.Favorite_Details">

    <TextView
        android:id="@+id/heading_fav"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:text=""
        android:textColor="#ED7123"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_button"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        tools:text="Egg omelette" />

    <TextView
        android:id="@+id/title_fav"
        android:layout_width="379dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_fav" />

    <ScrollView
        android:id="@+id/scrollable_fav"
        android:layout_width="374dp"
        android:layout_height="345dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_fav"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/summery_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/scrollable"
            app:layout_constraintTop_toBottomOf="@+id/title_d" />


    </ScrollView>

    <ImageView
        android:id="@+id/imageView_fav"
        android:layout_width="405dp"
        android:layout_height="203dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_fav"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_curve"
        android:minWidth="0dp"
        app:layout_constraintHorizontal_bias="0.9"
        android:gravity="center"
        android:drawablePadding="0dp"
        app:icon="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toTopOf="@+id/imageView_fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/heading_fav"
        app:layout_constraintTop_toTopOf="@+id/heading_fav"
        />

</androidx.constraintlayout.widget.ConstraintLayout>